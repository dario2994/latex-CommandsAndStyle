% Redefinition of cref, in order to have the name of the theorem in case it has one.
% It's hardcoded and not exactly clean and easy.
\let\crefnoname\cref
\makeatletter
\ExplSyntaxOn
\let\@tempcref\cref
\newcommand{\myref}[1]{
	\IfSubStr{#1}{,}{
		\@tempcref{#1}%
	}
	{
		\ifcsname r@#1\endcsname% Is the reference defined?
			\edef\@RefInfo{\csname r@#1\endcsname}% All the data about the reference.
			\edef\@CompleteCounter{\expandafter\@fourthoffive\@RefInfo}% Expanded name of the counter.
			
			\expandafter\IfBeginWith{\@CompleteCounter}{equation}{% Is the reference an equation?
				\@tempcref{#1}%
			}
			{
			\expandafter\IfBeginWith{\@CompleteCounter}{figure}{% Is the reference a figure?
				\@tempcref{#1}%
			}
			{
				\edef\@RefName{\expandafter\@thirdoffive\@RefInfo}% If defined, it containes the reference name.
				\StrLen{\@RefName}[\@RefNameLen]
				
				\ifthenelse{\@RefNameLen<2}{% Name is empty or only 1 char long?
					\@tempcref{#1}%
				}
				{
					\@tempcref{#1}~(\nameref*{#1})%
				}
			}
			}
% 			\begin{itemize}
% 				\item \expandafter\@firstoffive\@mytxt
% 				\item \expandafter\@secondoffive\@mytxt
% 				\item \expandafter\@thirdoffive\@mytxt
% 				\item \expandafter\@fourthoffive\@mytxt
% 				\item \expandafter\@fifthoffive\@mytxt
% 			\end{itemize}
		\else
			\@tempcref{#1}
		\fi
	}
}
\renewcommand{\cref}{\myref}
\ExplSyntaxOff
\makeatother

